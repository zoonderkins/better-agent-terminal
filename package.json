{
  "name": "better-agent-terminal",
  "version": "1.25.1217192457",
  "description": "Windows terminal aggregator with multi-workspace support and Claude Code integration",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "compile": "vite build",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "build:release": "node scripts/build-version.js",
    "postinstall": "echo 'Run electron-rebuild manually if node-pty is needed'"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "node-pty": "^0.10.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "org.tonyq.better-agent-terminal",
    "productName": "Better Agent Terminal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "zip",
      "signAndEditExecutable": false,
      "icon": "assets/icon.ico"
    },
    "forceCodeSigning": false,
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "assets/icon.ico",
      "assets/icon.png"
    ]
  }
}
